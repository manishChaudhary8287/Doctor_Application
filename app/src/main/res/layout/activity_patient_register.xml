<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.PatientRegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@color/primaryblue">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTRATION "
                android:textSize="22sp"
                android:textStyle="bold|italic"
                android:textColor="@color/black"
                android:layout_gravity="center"
                />
        </androidx.appcompat.widget.Toolbar>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgPowerPhysio"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/doc2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/etNamePatientRegister"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:drawablePadding="2dp"
            android:hint="Enter your Full Name"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/baseline_person_24"
            />
        <EditText
            android:id="@+id/etUsernamePatientRegister"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/baseline_email_24"
            android:drawablePadding="2dp"
            android:layout_gravity="center_horizontal"
            android:hint="Enter your Email Address" />

        <EditText
            android:id="@+id/etPasswordPatientRegister"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="2dp"
            android:hint="Enter your Password"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"

            />
        <EditText
            android:id="@+id/etConfirmPasswordPatientRegister"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:drawableLeft="@drawable/baseline_lock_24"
            android:drawablePadding="2dp"
            android:hint="Confirm your Password"
            android:inputType="textPassword"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />
        <EditText
            android:id="@+id/etNumberPatientRegister"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:drawableLeft="@drawable/baseline_phone_android_24"
            android:drawablePadding="2dp"
            android:hint="Enter your Phone Number"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:inputType="phone"
            />

        <Button
            android:id="@+id/btnregisterPatientRegister"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Register"
            android:textSize="18sp"
            android:padding="5dp"
            android:backgroundTint="@color/primaryOrange"
            android:layout_marginTop="22dp"

            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/txtloginPatientRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already an Account. Login"
            android:textStyle="italic"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:padding="5dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="serif"/>


    </LinearLayout>


</ScrollView>