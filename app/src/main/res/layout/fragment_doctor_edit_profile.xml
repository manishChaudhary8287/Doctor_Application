<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gardiant13"
    tools:context=".fragment.DoctorEditProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="54dp"
        >

        <EditText
            android:id="@+id/enterdoc"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Enter the doctor's name"
            android:layout_centerHorizontal="true"
            android:paddingStart="10dp"
            android:layout_marginTop="10dp"
            android:textColorHint="@color/black"
            />
        <EditText
            android:id="@+id/enterSpec"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Enter the doctor's speciality"
            android:layout_centerHorizontal="true"
            android:paddingStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/enterdoc"
            android:textColorHint="@color/black"
            />
        <EditText
            android:id="@+id/enterPrice"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Enter the  appointment price"
            android:layout_centerHorizontal="true"
            android:paddingStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/enterSpec"
            android:textColorHint="@color/black"
            />
        <EditText
            android:id="@+id/enterPhone"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Enter the  phone number"
            android:layout_centerHorizontal="true"
            android:paddingStart="10dp"
            android:inputType="phone"
            android:layout_marginTop="10dp"
            android:layout_below="@id/enterPrice"
            android:textColorHint="@color/black"
            />
        <EditText
            android:id="@+id/enterAddress"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Enter the  address"
            android:layout_centerHorizontal="true"
            android:paddingStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/enterPhone"
            android:textColorHint="@color/black"
            />
        <ImageView
            android:id="@+id/imgAdd"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/enterAddress"
            android:src="@drawable/add_image_removebg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            />

    </RelativeLayout>

</FrameLayout>