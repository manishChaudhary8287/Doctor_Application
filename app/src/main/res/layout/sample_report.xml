<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="60dp"
    android:scrollbars="vertical"
    tools:context=".fragment.ReportFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/reportLinerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="64dp"
            >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RVReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbarSize="30dp"
                tools:listitem="@layout/single_report_display"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btnFilter"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/reportLinerLayout"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:background="@color/btnAdded"
            android:text="  Apply Filter  "
            android:padding="5dp"
            android:textSize="22sp"
            android:textColor="@color/black"
            />


    </RelativeLayout>


</ScrollView>