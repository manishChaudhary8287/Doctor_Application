<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select your Preferences"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/txtweek1"
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:text="       Last 7 days / 1 week"
            android:textSize="16sp"
            android:layout_margin="12dp"
            android:padding="3dp"
            android:background="@drawable/border"
            android:layout_gravity="center_horizontal"
            />
        <TextView
            android:id="@+id/txtweek2"
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:text="     Last 14 days / 2 weeks  "
            android:textSize="16sp"
            android:layout_margin="12dp"
            android:padding="3dp"
            android:background="@drawable/border"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/txtmonth1"
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="12dp"
            android:background="@drawable/border"
            android:padding="3dp"
            android:text="    Last 30 days  / 1 month"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/txtAll"
            android:layout_width="205dp"
            android:layout_height="30dp"
            android:text="              Display All   "
            android:textSize="16sp"
            android:padding="3dp"
            android:layout_margin="12dp"
            android:background="@drawable/border"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>

</RelativeLayout>